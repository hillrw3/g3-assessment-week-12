<br/>
<% if @cage.errors.present? %>
  <div class="errors">
    <% @cage.errors.full_messages.each do |error| %>
      <%= error %>
      <br/>
    <% end %>
  </div>
<% end %>
<br/>

<%= form_for @cage do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br/><br/>
  <%= f.label :year %>
  <br/>
  <%= f.text_field :year %>
  <br/><br/>
  <%= f.label :synopsis %>
  <br/>
  <%= f.text_area :synopsis %>
  <br/><br/>
  <%= f.submit "Create Movie" %>

<% end %>